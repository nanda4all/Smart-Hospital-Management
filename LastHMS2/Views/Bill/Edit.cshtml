@model LastHMS2.Models.Bill

@{
    ViewData["Title"] = "Edit";
}
@section Styles{
    <link href="~/Medicio2/Edit.css" rel="stylesheet" />
}
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Bill_Id" />
            <div class="form-group">
                <label asp-for="Bill_Examination" class="control-label"></label>
                <input asp-for="Bill_Examination" class="form-control" />
                <span asp-validation-for="Bill_Examination" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Bill_Surgeries" class="control-label"></label>
                <input asp-for="Bill_Surgeries" class="form-control" />
                <span asp-validation-for="Bill_Surgeries" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Bill_Rays" class="control-label"></label>
                <input asp-for="Bill_Rays" class="form-control" />
                <span asp-validation-for="Bill_Rays" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Bill_Medical_Test" class="control-label"></label>
                <input asp-for="Bill_Medical_Test" class="form-control" />
                <span asp-validation-for="Bill_Medical_Test" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Bill_Room_Service" class="control-label"></label>
                <input asp-for="Bill_Room_Service" class="form-control" />
                <span asp-validation-for="Bill_Room_Service" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Bill_Medication" class="control-label"></label>
                <input asp-for="Bill_Medication" class="form-control" />
                <span asp-validation-for="Bill_Medication" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Bill_Date" class="control-label"></label>
                <input asp-for="Bill_Date" class="form-control" />
                <span asp-validation-for="Bill_Date" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Paid" /> @Html.DisplayNameFor(model => model.Paid)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Patient_Id" class="control-label"></label>
                <select asp-for="Patient_Id" class="form-control" asp-items="ViewBag.Patient_Id"></select>
                <span asp-validation-for="Patient_Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
