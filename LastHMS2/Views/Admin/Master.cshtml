@model IEnumerable<LastHMS2.Models.Hospital>

@{
    ViewData["Title"] = "Master";
}
@section Styles{

    <link href="~/Medicio2/dashborde/vendor/fontawesome-free/css/all.css" rel="stylesheet" />
    <link href="~/Medicio2/assets/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet" /><!-- bootstrap icon -->
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet" /><!-- font -->
    <link href="~/Medicio2/assets/css/bootstrap.min.css" rel="stylesheet" /><!-- bootstrap min-->
    <link href="~/Medicio2/Delete.css" rel="stylesheet" />
    <link href="~/Medicio2/dashborde/admindb/css/admin.css" rel="stylesheet" />
}
<!-- sidebar start-->
<div class="sidebar">
    <div class="logo">
        <img src="~/Medicio2/assets/img/avatar/admin.jpg " class="doctor-img" />
        <span class="logo_name">مشرف</span>
    </div>
    <hr class="sidebar-divider" />
    <div class="nav-links">
        <div class="f_div">
            <a asp-controller="Hospital" asp-action="Create">
                <span class="side_name"><i class="fas fa-hospital-user"></i> إضافة مشفى</span>
            </a>
        </div>
    </div>
</div>
<!-- sidebar end -->
<!-- start  -->
<section class="home-section">
    <!-- start Topbar -->
    <div class="  navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow  topbar-ps">
        <div class="row">
            <ul class="navbar-nav ml-auto">

                <!-- Nav Item -admin info -->
                <li class="nav-item dropdown no-arrow">
                    <a class="nav-link dropdown-toggle do_div" id="userDropdown" href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <div class="info-d top_div">
                            <span class="mr-2 d-lg-inline text-gray-600 small">مشرف</span>
                            <img class="img-profile rounded-circle d-xs-none" src="~/Medicio2/dashborde/img/admin.jpg" />

                        </div>
                    </a>
                    <div class="dropdown-menu dropdown-menu-right shadow animated--grow-in info-doc" aria-labelledby="userDropdown">
                        <a class="dropdown-item" href="#">
                            <i class="fas fa-user fa-sm fa-fw mr-2 text-gray-400"></i>
                            المعلومات الشخصية
                        </a>

                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item" href="#" data-toggle="modal" data-target="#logoutModal">
                            <i class="fas fa-sign-out-alt fa-sm fa-fw mr-2 text-gray-400"></i>
                            تسجيل خروج
                        </a>
                    </div>
                </li>
            </ul>
        </div>
    </div>
    <!-- end Topbar -->
    <!--logout modal -->
    <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title modal-txt" id="exampleModalLabel">
                        تسجيل خروج
                    </h5>
                    <button class="close close_x" type="button" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body">هل أنت متأكد</div>
                <div class="modal-footer">
                    <button class="btn btn-secondary close_btn" type="button" data-dismiss="modal">
                        إلغاء
                    </button>
                    <a class="btn btn-primary Logout-btn" href="../../login/Loginadmin/loginadmin.html">تسجيل خروج</a>
                </div>
            </div>
        </div>
    </div>

    <!-- start page -->
    <div class="container">
        <div class="row">

            <a asp-controller="Hospital" asp-action="Create" class="btn modal-bt1" style="display :flex; align-items:center; justify-content:center;"> إضافة مشفى</a>

        </div>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Ho_Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Ho_Subscribtion_Date)
                </th>

                <th></th>
            </tr>
        </thead>
        <tbody>
            @{int i = 0; }
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Ho_Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Ho_Subscribtion_Date)
                    </td>

                    <td>
                        @{
                            string confirm = "confirm" + i;
                            string cancel = "cancel" + i;
                            string delete = "delete" + i;
                        }
                        <a id="@delete" class="btn delete_btn" onclick="Confirm(@i)">حذف</a>
                        <a id="@cancel" class="btn Cancel_btn" onclick="Cancel(@i)">إلغاء</a>
                        <a class="btn Confirm_btn" asp-controller="Hospital" asp-action="Delete" asp-route-id="@item.Ho_Id" id="@confirm">تأكيد</a>
                        @{i++;}
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <!-- end page -->
</section>
<!-- end  -->
<!-- start footer-->
<footer>
    <div class="footer">
        <span class="fo_span">
            حقوق الطباعة &copy; موقعنا 2022
        </span>
    </div>
</footer>
<!-- end footer-->


@section Scripts{
    <script src="~/Medicio2/dashborde/vendor/jquery/jquery.min.js"></script>
    <script src="~/Medicio2/dashborde/vendor/bootstrap/js/bootstrap.bundle.min.js"></script><!--  bootstrap js-->
    <!-- Core plugin JavaScript-->
    <script src="~/Medicio2/dashborde/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="~/Medicio2/dashborde/js/sb-admin-2.js"></script>

    <!-- Page level plugins -->
    <script src="~/Medicio2/dashborde/vendor/chart.js/Chart.min.js"></script>
    <script src="~/Medicio2/dashborde/vendor/chart.js/Chart.min.js"></script>

    <!-- Page level custom scripts -->
    <script src="~/Medicio2/dashborde/js/demo/chart-area-demo.js"></script>
    <script src="~/Medicio2/dashborde/js/demo/chart-pie-demo.js"></script>
    <script src="~/ConfirmDelete.js"></script>
} 