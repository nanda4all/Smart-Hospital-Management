@model IEnumerable<LastHMS2.ShowClasses.ShowPreviewsForDoctor>

@{
    ViewData["Title"] = "MasterDeptMgr";
}

@section Styles{
    <style>
        html {
            direction: rtl
        }
    </style>
    <link href="~/Medicio2/dashborde/vendor/fontawesome-free/css/all.css" rel="stylesheet" type="text/css"><!-- fontawsome icons-->
    <link href="~/Medicio2/assets/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet" /><!-- bootstrap icons-->
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet"><!-- font-->
    <link href="~/Medicio2/assets/css/bootstrap.min.css" rel="stylesheet"><!-- bootstrap min-->
    <link href="~/Medicio2/dashborde/doctor-mngdb/css/doctor-mng.css" rel="stylesheet" />
}

<a asp-action="LogOut">Log Out</a>
<!--sidebar start-->
<div class="sidebar">
    <div class="logo-details">
        <img src="~/Medicio2/dashborde/img/doctor..jpg" class="doctor-img ">

        <span class="logo_name">@ViewBag.DoctorName</span>
    </div>
    <hr class="sidebar-divider ">
    <div class="nav-links ">
        <div class=" s_div">
            <a asp-controller="Patient" asp-action="HoPatientsForPreview" asp-route-id="@ViewBag.HoId" asp-route-DocId="@ViewBag.DeptMgrId">
                <i class="bi bi-calendar-week ic"></i> <span class="side_name">حجز موعد</span>
            </a>
        </div>
        <div class="s_div">
            <a asp-controller="Patient" asp-action="DoctorIndex" asp-route-id="@ViewBag.DeptMgrId" asp-route-HoId="@ViewBag.HoId">
                <i class="fa fa-wheelchair ic"></i> <span class="side_name">مرضى</span>
            </a>
        </div>
        <br><br>
        <div class=" ll_div">
            <a asp-controller="Doctor" asp-action="DisplayDoctrosByDeptId" asp-route-id="@ViewBag.DeptMgrId" asp-route-HoId="@ViewBag.HoId">
                <i class="bi bi-clipboard-plus ic doc-icon"></i> <span class="side_name">أطباء</span>
            </a>
        </div>
        <div class="lll_div">
            <a asp-controller="Work_Days" asp-action="GetWorkDays" asp-route-id="@ViewBag.DeptMgrId" asp-route-HoId="@ViewBag.HoId">
                <i class="BI bi-calendar-week"></i>
                <span class="side_name">عرض جدول الدوام</span>
            </a>
        </div>
        <div class=" l_div">
            <label for="touch">
                <i class="fa fa-bed ic"></i> <span class="side_name">عمليات</span>
                &nbsp;&nbsp; &nbsp; &nbsp;&nbsp;&nbsp; &nbsp; &nbsp;&nbsp;&nbsp; &nbsp; &nbsp;&nbsp;
                &nbsp; &nbsp; &nbsp;&nbsp;&nbsp;    <i class="bi bi-chevron-compact-down icon "></i>
            </label>
            <input type="checkbox" id="touch">
            <ul class="slide">
                <span>عمليات</span>
                <li>
                    <a asp-controller="Surgery" asp-action="DisplaySurgeries" asp-route-id="@ViewBag.DeptMgrId" asp-route-HoId="@ViewBag.HoId">حجز غرفة</a>
                </li>
                <li>
                    <a asp-controller="Surgery_Room" asp-action="DoctorIndex" asp-route-id="@ViewBag.DeptMgrId"> الغاء حجز غرفة</a>
                </li>
            </ul>
        </div>
    </div>
    <hr class="sidebar-divider ">
</div>
<!--sidebar end -->
<!-- start-->
<section class="home-section">

    <!-- Topbar start -->

    <div class="container navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow topbar-ps ">
        <div class="row">
            <ul class="navbar-nav ml-auto">
                <!-- Alerts start-->
                <li class="nav-item dropdown no-arrow mx-1">
                    <a class="nav-link dropdown-toggle" href="#" id="alertsDropdown" role="button"
                       data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <div class="top_div">
                            <i class="fas fa-bell fa-fw"></i>
                            <!-- Counter - Alerts -->
                            <span class="badge badge-danger badge-counter">3+</span>
                        </div>
                    </a>
                    <!-- Alerts Dropdown start -->
                    <div class="dropdown-list dropdown-menu dropdown-menu-right shadow animated--grow-in alert-doc"
                         aria-labelledby="alertsDropdown">
                        <h6 class="dropdown-header">
                            Alerts Center
                        </h6>
                        <a class="dropdown-item d-flex align-items-center" href="#">
                            <div class="mr-3">
                                <div class="icon-circle bg-primary">
                                    <i class="fas fa-file-alt text-white"></i>
                                </div>
                            </div>
                            <div>
                                <div class="small text-gray-500">December 12, 2019</div>
                                <span class="font-weight-bold">A new monthly report is ready to download!</span>
                            </div>
                        </a>
                        <a class="dropdown-item d-flex align-items-center" href="#">
                            <div class="mr-3">
                                <div class="icon-circle bg-success">
                                    <i class="fas fa-donate text-white"></i>
                                </div>
                            </div>
                            <div>
                                <div class="small text-gray-500">December 7, 2019</div>
                                $290.29 has been deposited into your account!
                            </div>
                        </a>
                        <a class="dropdown-item d-flex align-items-center" href="#">
                            <div class="mr-3">
                                <div class="icon-circle bg-warning">
                                    <i class="fas fa-exclamation-triangle text-white"></i>
                                </div>
                            </div>
                            <div>
                                <div class="small text-gray-500">December 2, 2019</div>
                                Spending Alert: We've noticed unusually high spending for your account.
                            </div>
                        </a>
                        <a class="dropdown-item text-center small text-gray-500" href="#">Show All Alerts</a>
                    </div>
                    <!-- Alerts Dropdown end -->
                </li>
                <!-- Alerts end -->
                <div class="topbar-divider d-none d-sm-block"></div>

                <!-- doctormgr Info start -->
                <li class="nav-item dropdown no-arrow ">
                    <a class="nav-link dropdown-toggle do_div" href="#" id="userDropdown" role="button"
                       data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <div class="top_div">
                            <span class="mr-2 d-none d-lg-inline text-gray-600 small">@ViewBag.DoctorName</span>
                            <img class="img-profile rounded-circle"
                                 src="~/Medicio2/dashborde/img/undraw_profile.svg">
                        </div>
                    </a>

                    <!-- doctormgr Info Dropdown start -->
                    <div class="dropdown-menu dropdown-menu-right shadow animated--grow-in info-doc"
                         aria-labelledby="userDropdown">
                        <a class="dropdown-item" asp-action="Details" asp-route-id="@ViewBag.DeptMgrId" asp-route-HoId="@ViewBag.HoId">
                            <i class="fas fa-user fa-sm fa-fw mr-2 text-gray-400"></i>
                            المعلومات الشخصية
                        </a>
                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item" href="#" data-toggle="modal" data-target="#logoutModal">
                            <i class="fas fa-sign-out-alt fa-sm fa-fw   mr-2 text-gray-400"></i>
                            تسجيل خروج
                        </a>
                    </div>
                    <!-- doctormgr Info Dropdown end -->
                </li>
                <!-- doctormgr Info end -->

            </ul>
        </div>
    </div>
    <!-- Logout Modal start-->
    <div class="modal fade " id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
         aria-hidden="true" dir="ltr">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title modal-txt" id="exampleModalLabel">تسجيل خروج</h5>
                    <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body "> هل أنت متأكد</div>
                <div class="modal-footer">
                    <button class="btn btn-secondary close_btn" type="button" data-dismiss="modal">إلغاء</button>
                    <a class="btn btn-primary Logout-btn" asp-action="LogOut">تسجيل خروج</a>
                </div>
            </div>
        </div>
    </div>
    <!-- Logout Modal end-->
    <!-- Topbar end -->
    <!-- page start -->
    <!-- dates btn-->
    <div class="container ">
        <div class="row">
            <a asp-controller="Patient" asp-action="HoPatientsForPreview" asp-route-id="@ViewBag.HoId" asp-route-DocId="@ViewBag.DeptMgrId">
                <button type="button" class="btn modal-bt1 ">
                    حجز موعد
                </button>
            </a>

            <!--pait Btn -->
            <a asp-controller="Patient" asp-action="DoctorIndex" asp-route-id="@ViewBag.DeptMgrId" asp-route-HoId="@ViewBag.HoId">
                <button type="button" class="btn   modal-bt1 ">
                    المرضى
                </button>
            </a>

            <!--doctor Btn -->
            <a asp-controller="Doctor" asp-action="DisplayDoctrosByDeptId" asp-route-id="@ViewBag.DeptMgrId" asp-route-HoId="@ViewBag.HoId">
                <button type="button" class="btn   modal-bt1 "> أطباء</button>
            </a>
            <!-- surg btn -->

            <button type="button" class="btn modal-bt1" data-toggle="modal" data-target="#exampleModal3">
                العمليات
            </button>

            <!--surg Modal start -->
            <div class="modal fade " id="exampleModal3" tabindex="-1" aria-labelledby="exampleModalLabel3" aria-hidden="true" dir="ltr">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title modal-txt " id="exampleModalLabel3">عملية </h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body Center ">
                            <a asp-controller="Preview" asp-action="Create" asp-route-id="@ViewBag.DeptMgrId">
                                <button type="button" class="btn btn-info  modal-bt4">
                                    حجز غرفة عمليات
                                </button>
                            </a>
                            <a asp-controller="Surgery_Room" asp-action="DoctorIndex" asp-route-id="@ViewBag.DeptMgrId">
                                <button type="button" class="btn btn-info  modal-bt4">
                                    إلغاء حجز غرفة
                                </button>
                            </a>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-primary close_btn" data-dismiss="modal">إغلاق</button>
                        </div>
                    </div>
                </div>
            </div>
            <!--surg Modal end -->
            <!--doctor Btn -->
            
                @*!!!!!!!!*@
                <a asp-controller="Work_Days" asp-action="GetWorkDays" asp-route-id="@ViewBag.DeptMgrId" asp-route-HoId="@ViewBag.HoId">
                    <button type="button" class="btn   modal-bt2 ">عرض جدول الدوام</button>
                </a>
            
        </div>
    </div>
    <!--table start -->

    <div class="container">
        <div class="row">
            <table class="table">
                <thead>
                    <tr>
                        <th>

                            @Html.DisplayNameFor(model => model.PreviewDate)
                        </th>
                        <th>

                            @Html.DisplayNameFor(model => model.PatientName)
                        </th>
                        <th>

                            @Html.DisplayNameFor(model => model.PreviewHour)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @{int i = 0; }
                    @foreach (var item in Model)
                    {



                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.PreviewDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PatientName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PreviewHour)
                            </td>
                            <td>
                                @{
                                    string confirm = "confirm" + i;
                                    string cancel = "cancel" + i;
                                    string delete = "delete" + i;
                                }
                                <a id="@delete" class="btn delete_btn" onclick="Confirm(@i)">حذف</a>
                                <a id="@cancel" class="btn Cancel_btn" onclick="Cancel(@i)" >إلغاء</a>
                                <a  class="btn Confirm_btn" asp-controller="Preview" asp-action="Delete" asp-route-id="@item.PreviewId" asp-route-DocId="@ViewBag.DeptMgrId" asp-route-HoId="@ViewBag.HoId" id="@confirm">تأكيد</a>
                                @{i++;}
                            </td>
                        </tr>

                    }
                </tbody>
            </table>
        </div>
    </div>
    <!--table end -->
    <!--page end -->
    <!--footer start -->
    <footer>
        <div class="footer">
            <span class="fo_span center">حقوق الطباعة &copy; موقعنا 2022</span>
        </div>
    </footer>
    <!--footer end -->

</section>
<!--end -->
