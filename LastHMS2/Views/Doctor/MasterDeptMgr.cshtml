    <script src="~/Medicio2/dashborde/vendor/chart.js/Chart.min.js"></script>

    <!-- Page level custom scripts -->
    <script src="~/Medicio2/dashborde/js/demo/chart-area-demo.js"></script>
    <script src="~/Medicio2/dashborde/js/demo/chart-pie-demo.js"></script>
}
